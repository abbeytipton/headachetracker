<h1>Edit Log</h1>

<%= form_for @logs do |f| %>

<div class="flexLabels">
  <%= f.label 'Date Started' %>
  <%= f.datetime_field :date_started, required: true, class: 'oneField', value: log.date_ended.strftime('%Y-%m-%dT%H:%M') %><br/>
</div>

<div class="flexLabels">
  <%= f.label 'Date Ended' %>
