<h1>Edit Log</h1>

<%= form_for @logs do |f| %>

<div class="parentFlex">
<div class="flexLabels">
  <h4>Date Started</h4>
  <%= f.datetime_field :date_started, required: true, class: 'editDate', value: @logs.date_started.strftime('%Y-%m-%dT%H:%M') %><br/>
</div>

<div class="flexLabels">
  <h4>Date Ended</h4>
  <%= f.datetime_field :date_ended, required: true, class: 'editDate', value: @logs.date_ended.strftime('%Y-%m-%dT%H:%M') %><br/>
</div>

<div class="flexLabels">
  <% if include_period == 1 %>
    <h4>On or Near Period</h4>
    <%= f.check_box :period, :class => 'editCheckbox' %><br>
  <% end %>
</div>

<div class="flexLabels">
  <% if include_dehydrated == 1 %>
    <h4>Dehydration</h4>
    <%= f.check_box :dehydration, :class => 'editCheckbox' %><br>
  <% end %>
</div>

<div class="flexLabels">
