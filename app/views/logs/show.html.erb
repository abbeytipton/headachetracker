      </td>
    <% end %>

    <% if include_trigger5 %>
      <td>
        <% if log.trigger5 == true %>
          <%= image_tag("yes.png") %>
        <% else %>
          <%= image_tag("no.png") %>
        <% end %>
      </td>
    <% end %>

    </tr>
    <% end %>
    <% end %>

</table>
